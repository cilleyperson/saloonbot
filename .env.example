# Twitch Application Credentials
# Get these from https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Bot Account Username (the Twitch account that will send messages)
TWITCH_BOT_USERNAME=your_bot_username

# OAuth Callback URL (must match what's configured in Twitch Developer Console)
CALLBACK_URL=http://localhost:3000/auth/callback

# Web Server Configuration
PORT=3000
# REQUIRED in production: Session secret for encrypting session data
# Generate a random string at least 32 characters long
SESSION_SECRET=change_this_to_a_random_string_at_least_32_chars

# Security Configuration
# REQUIRED in production: Encryption key for OAuth tokens (32 bytes as hex = 64 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=

# Database Configuration
DATABASE_PATH=./data/bot.db

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Environment (development, production)
NODE_ENV=development

# HTTPS Configuration (optional)
# Enable HTTPS for secure connections to the admin interface
# Run `npm run generate-certs` to create self-signed certificates for development
HTTPS_ENABLED=false
HTTPS_PORT=3443
# Path to SSL certificate files (relative to project root)
HTTPS_KEY_PATH=./certs/server.key
HTTPS_CERT_PATH=./certs/server.crt
# Redirect HTTP to HTTPS when HTTPS is enabled (default: true)
HTTPS_REDIRECT_HTTP=true
