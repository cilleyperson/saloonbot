<%- include('../layout', { body: `
<div class="page">
  ${(function() {
    const escapeHtml = (str) => {
      if (!str) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    };
    const displayName = escapeHtml(channel.display_name || channel.twitch_username);

    return `
  <div class="page-header">
    <div class="page-header-content">
      <a href="/channels/${channel.id}" class="back-link">&larr; Back to Channel</a>
      <h1 class="page-title">Predefined Commands</h1>
      <p class="page-subtitle">${displayName}</p>
    </div>
  </div>

  <div class="page-content">
    <div class="alert alert-info mb-6">
      Predefined commands are built-in bot features that you can enable or disable per channel.
      Each command can be configured with cooldowns and chat scopes.
    </div>

    <div class="card">
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Command</th>
              <th>Description</th>
              <th>Status</th>
              <th>Cooldown</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${commands.map(cmd => {
              const cmdName = escapeHtml(cmd.command_name);
              const cmdEmoji = cmd.info?.emoji ? escapeHtml(cmd.info.emoji) : '';
              const cmdTrigger = cmd.info?.trigger ? escapeHtml(cmd.info.trigger) : '!' + cmdName;
              const cmdDesc = cmd.info?.description ? escapeHtml(cmd.info.description) : '';
              return `
            <tr class="${cmd.is_enabled ? '' : 'row-muted'}">
              <td>
                <span class="text-lg mr-2">${cmdEmoji}</span>
                <code>${cmdTrigger}</code>
              </td>
              <td class="text-secondary">${cmdDesc}</td>
              <td>
                <span class="badge ${cmd.is_enabled ? 'badge-success' : 'badge-error'}">
                  ${cmd.is_enabled ? 'enabled' : 'disabled'}
                </span>
              </td>
              <td>${cmd.cooldown_seconds}s</td>
              <td>
                <div class="btn-group">
                  <a href="/channels/${channel.id}/predefined/${cmdName}" class="btn btn-sm">Configure</a>
                  <form action="/channels/${channel.id}/predefined/${cmdName}/toggle" method="POST" class="inline-form">
                    <input type="hidden" name="_csrf" value="${csrfToken}">
                    <button type="submit" class="btn btn-sm btn-secondary">${cmd.is_enabled ? 'Disable' : 'Enable'}</button>
                  </form>
                  ${cmd.command_name === 'ball' ? `
                  <a href="/channels/${channel.id}/predefined/ball/responses" class="btn btn-sm btn-secondary">Responses</a>
                  ` : ''}
                  ${cmd.command_name === 'define' ? `
                  <a href="/channels/${channel.id}/predefined/define/definitions" class="btn btn-sm btn-secondary">Custom Words</a>
                  ` : ''}
                  ${cmd.command_name === 'rps' ? `
                  <a href="/channels/${channel.id}/predefined/rps/stats" class="btn btn-sm btn-secondary">Leaderboard</a>
                  ` : ''}
                  ${cmd.command_name === 'trivia' ? `
                  <a href="/channels/${channel.id}/predefined/trivia/stats" class="btn btn-sm btn-secondary">Leaderboard</a>
                  ` : ''}
                </div>
              </td>
            </tr>
              `;
            }).join('')}
          </tbody>
        </table>
      </div>
    </div>
  </div>
    `;
  })()}
</div>
`, activePage: 'predefined', channel: channel }) %>
