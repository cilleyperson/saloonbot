<%- include('../layout', { body: `
<div class="predefined-commands-page">
  ${(function() {
    const escapeHtml = (str) => {
      if (!str) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    };
    const displayName = escapeHtml(channel.display_name || channel.twitch_username);

    return `
  <div class="page-header">
    <div>
      <a href="/channels/${channel.id}" class="back-link">&larr; Back to Channel</a>
      <h1>Predefined Commands</h1>
      <p class="subtitle">${displayName}</p>
    </div>
  </div>

  <p class="info-box">
    Predefined commands are built-in bot features that you can enable or disable per channel.
    Each command can be configured with cooldowns and chat scopes.
  </p>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Command</th>
          <th>Description</th>
          <th>Status</th>
          <th>Cooldown</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        ${commands.map(cmd => {
          const cmdName = escapeHtml(cmd.command_name);
          const cmdEmoji = cmd.info?.emoji ? escapeHtml(cmd.info.emoji) : '';
          const cmdTrigger = cmd.info?.trigger ? escapeHtml(cmd.info.trigger) : '!' + cmdName;
          const cmdDesc = cmd.info?.description ? escapeHtml(cmd.info.description) : '';
          return `
        <tr class="${cmd.is_enabled ? '' : 'disabled'}">
          <td>
            <span class="command-emoji">${cmdEmoji}</span>
            <code>${cmdTrigger}</code>
          </td>
          <td>${cmdDesc}</td>
          <td>
            <span class="status-badge ${cmd.is_enabled ? 'status-connected' : 'status-disconnected'}">
              ${cmd.is_enabled ? 'enabled' : 'disabled'}
            </span>
          </td>
          <td>${cmd.cooldown_seconds}s</td>
          <td class="actions">
            <a href="/channels/${channel.id}/predefined/${cmdName}" class="btn btn-small">Configure</a>
            <form action="/channels/${channel.id}/predefined/${cmdName}/toggle" method="POST" class="inline-form">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-small btn-secondary">${cmd.is_enabled ? 'Disable' : 'Enable'}</button>
            </form>
            ${cmd.command_name === 'ball' ? `
            <a href="/channels/${channel.id}/predefined/ball/responses" class="btn btn-small btn-secondary">Responses</a>
            ` : ''}
            ${cmd.command_name === 'define' ? `
            <a href="/channels/${channel.id}/predefined/define/definitions" class="btn btn-small btn-secondary">Custom Words</a>
            ` : ''}
            ${cmd.command_name === 'rps' ? `
            <a href="/channels/${channel.id}/predefined/rps/stats" class="btn btn-small btn-secondary">Leaderboard</a>
            ` : ''}
          </td>
        </tr>
          `;
        }).join('')}
      </tbody>
    </table>
  </div>
    `;
  })()}
</div>

<style>
.command-emoji {
  font-size: 1.2em;
  margin-right: 0.5em;
}
.info-box {
  background: var(--bg-secondary, #f5f5f5);
  padding: 1rem;
  border-radius: 4px;
  margin-bottom: 1.5rem;
}
</style>
` }) %>
