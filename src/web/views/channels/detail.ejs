<%- include('../layout', { body: `
<div class="page">
  ${(function() {
    const escapeHtml = (str) => {
      if (!str) return '';
      return String(str)
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    };
    const displayName = escapeHtml(channel.display_name || channel.twitch_username);
    const username = escapeHtml(channel.twitch_username);
    const isConnected = status.status === 'connected';
    const statusText = channel.is_active ? escapeHtml(status.status) : 'inactive';

    return `
  <div class="page-header">
    <div class="page-header-content">
      <a href="/channels" class="back-link">&larr; Back to Channels</a>
      <h1 class="page-title">${displayName}</h1>
      <p class="page-subtitle">@${username}</p>
    </div>
    <div class="page-header-actions">
      <span class="badge ${isConnected && channel.is_active ? 'badge-success' : 'badge-error'} badge-lg">
        ${statusText}
      </span>
    </div>
  </div>

  <div class="page-content">
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Quick Actions</h3>
        </div>
        <div class="card-body">
          <div class="btn-group-vertical">
            <a href="/channels/${channel.id}/settings" class="btn btn-primary">Settings</a>
            <a href="/channels/${channel.id}/commands" class="btn btn-secondary">Commands (${commands.length})</a>
            <a href="/channels/${channel.id}/counters" class="btn btn-secondary">Counters (${counters.length})</a>
            <a href="/channels/${channel.id}/chat-memberships" class="btn btn-secondary">Memberships (${chatMemberships.length})</a>
            <a href="/channels/${channel.id}/predefined" class="btn btn-secondary">Predefined Commands</a>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Channel Status</h3>
        </div>
        <div class="card-body">
          <dl class="info-list">
            <div class="info-item">
              <dt>Status</dt>
              <dd><span class="badge ${isConnected && channel.is_active ? 'badge-success' : 'badge-error'}">${statusText}</span></dd>
            </div>
            <div class="info-item">
              <dt>Active</dt>
              <dd>${channel.is_active ? 'Yes' : 'No'}</dd>
            </div>
            ${status.connectedAt ? `
            <div class="info-item">
              <dt>Connected Since</dt>
              <dd>${new Date(status.connectedAt).toLocaleString()}</dd>
            </div>
            ` : ''}
          </dl>
          <div class="mt-4">
            <a href="/auth/channel" class="btn btn-secondary">Re-authorize with Twitch</a>
            <p class="text-muted text-sm mt-2">Use this if the bot is disconnected due to expired or revoked tokens.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-6">
      <div class="card-header">
        <h3 class="card-title">Recent Commands</h3>
        <a href="/channels/${channel.id}/commands" class="btn btn-sm btn-secondary">View All</a>
      </div>
      ${commands.length > 0 ? `
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Command</th>
              <th>Response</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            ${commands.slice(0, 5).map(cmd => {
              const cmdName = escapeHtml(cmd.command_name);
              const cmdResponse = escapeHtml(cmd.response);
              return `
            <tr>
              <td><code>!${cmdName}</code></td>
              <td class="text-truncate">${cmdResponse}</td>
              <td>
                <span class="badge ${cmd.is_enabled ? 'badge-success' : 'badge-error'}">
                  ${cmd.is_enabled ? 'enabled' : 'disabled'}
                </span>
              </td>
            </tr>
              `;
            }).join('')}
          </tbody>
        </table>
      </div>
      ` : `
      <div class="card-body">
        <div class="empty-state empty-state-sm">
          <p>No commands yet.</p>
          <a href="/channels/${channel.id}/commands/new" class="btn btn-sm btn-primary mt-2">Create one</a>
        </div>
      </div>
      `}
    </div>

    <div class="card mb-6">
      <div class="card-header">
        <h3 class="card-title">Counters</h3>
        <a href="/channels/${channel.id}/counters" class="btn btn-sm btn-secondary">View All</a>
      </div>
      ${counters.length > 0 ? `
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Counter</th>
              <th>Current Count</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            ${counters.slice(0, 5).map(cnt => {
              const cntName = escapeHtml(cnt.counter_name);
              return `
            <tr>
              <td><code>${cntName}++</code></td>
              <td>${cnt.current_count}</td>
              <td>
                <span class="badge ${cnt.is_enabled ? 'badge-success' : 'badge-error'}">
                  ${cnt.is_enabled ? 'enabled' : 'disabled'}
                </span>
              </td>
            </tr>
              `;
            }).join('')}
          </tbody>
        </table>
      </div>
      ` : `
      <div class="card-body">
        <div class="empty-state empty-state-sm">
          <p>No counters yet.</p>
          <a href="/channels/${channel.id}/counters/new" class="btn btn-sm btn-primary mt-2">Create one</a>
        </div>
      </div>
      `}
    </div>

    <div class="card card-danger">
      <div class="card-header">
        <h3 class="card-title">Danger Zone</h3>
      </div>
      <div class="card-body">
        <div class="btn-group">
          ${channel.is_active ? `
          <form action="/channels/${channel.id}/disconnect" method="POST" class="inline-form">
            <input type="hidden" name="_csrf" value="${csrfToken}">
            <button type="submit" class="btn btn-warning" onclick="return confirm('Disconnect this channel?')">Disconnect Channel</button>
          </form>
          ` : `
          <form action="/channels/${channel.id}/reconnect" method="POST" class="inline-form">
            <input type="hidden" name="_csrf" value="${csrfToken}">
            <button type="submit" class="btn btn-primary">Reconnect Channel</button>
          </form>
          `}
          <form action="/channels/${channel.id}/delete" method="POST" class="inline-form">
            <input type="hidden" name="_csrf" value="${csrfToken}">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this channel and all its data? This cannot be undone!')">Delete Channel</button>
          </form>
        </div>
      </div>
    </div>
  </div>
    `;
  })()}
</div>
`, activePage: 'channel-overview', channel: channel }) %>
