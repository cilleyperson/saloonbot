<%- include('../layout', { body: `
<div class="channels-page">
  <div class="page-header">
    <h1>Channels</h1>
    <a href="/channels/add" class="btn btn-primary">Add Channel</a>
  </div>

  ${typeof channels !== 'undefined' && channels.length > 0 ? `
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Channel</th>
          <th>Status</th>
          <th>Commands</th>
          <th>Counters</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        ${channels.map(channel => {
          const escapeHtml = (str) => {
            if (!str) return '';
            return String(str)
              .replace(/&/g, '&amp;')
              .replace(/</g, '&lt;')
              .replace(/>/g, '&gt;')
              .replace(/"/g, '&quot;')
              .replace(/'/g, '&#39;');
          };
          const displayName = escapeHtml(channel.display_name || channel.twitch_username);
          const username = escapeHtml(channel.twitch_username);
          const statusClass = channel.status.status === 'connected' ? 'status-connected' : 'status-disconnected';
          const statusText = channel.is_active ? escapeHtml(channel.status.status) : 'inactive';
          return `
        <tr class="${channel.is_active ? '' : 'inactive'}">
          <td>
            <strong>${displayName}</strong>
            <br><small>@${username}</small>
          </td>
          <td>
            <span class="status-badge ${statusClass}">
              ${statusText}
            </span>
          </td>
          <td>${channel.commandCount}</td>
          <td>${channel.counterCount}</td>
          <td class="actions">
            <a href="/channels/${channel.id}" class="btn btn-small">Manage</a>
            <a href="/channels/${channel.id}/commands" class="btn btn-small btn-secondary">Commands</a>
            <a href="/channels/${channel.id}/counters" class="btn btn-small btn-secondary">Counters</a>
          </td>
        </tr>
          `;
        }).join('')}
      </tbody>
    </table>
  </div>
  ` : `
  <div class="empty-state">
    <p>No channels configured yet.</p>
    <a href="/channels/add" class="btn btn-primary">Add Your First Channel</a>
  </div>
  `}
</div>
` }) %>
